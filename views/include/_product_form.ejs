<form method="POST" id="add_user">
    <div class="new_user form-group">
        <label for="name" class="text-light">Product</label>
        <input type="hidden" name="product_id" value="" />
        <input type="text" name="name" placeholder="Product Name" />
    </div>

    <div class="new_user form-group">
        <label for="name" class="text-light">Price</label>
        <input type="hidden" name="product_id" value="" />
        <input type="text" name="name" placeholder="0" />
    </div>

    <div class="new_user form-group">
        <label for="name" class="text-light">Quantity</label>
        <input type="hidden" name="product_id" value="" />
        <input type="text" name="name" placeholder="Quantity" />
    </div>

    <div class="new_user form-group">
        <label for="name" class="text-light">Vendor</label>
        <input type="hidden" name="product_id" value="" />
        <input type="text" name="name" placeholder="Vendor Name" />
    </div>

    <div class="new_user form-group">
        <label for="name" class="text-light">Warranty</label>
        <input type="hidden" name="product_id" value="" />
        <input type="text" name="name" placeholder="Warranty in Years" />
    </div>

    <div class="new_user form-group">
        <label for="name" class="text-light">Id</label>
        <input type="hidden" name="product_id" value="" />
        <input type="text" name="name" placeholder="Id" />
    </div>



    <div class="form-group new_user ">
        <button type="submit" class="btn text-dark update">Save</button>
    </div>
</div>
</form>